HEADER_MARGIN = 40px
FOOTER_HEIGHT = 80px


html
    position relative
    min-height 100%

.content
    padding-bottom FOOTER_HEIGHT * 1.5

.header
    margin-top HEADER_MARGIN
    margin-bottom HEADER_MARGIN

.start_here
    margin-top 50px

.footer
    position absolute
    bottom 0px
    width 100%
    height FOOTER_HEIGHT
    background-color #f5f5f5
    padding-top (FOOTER_HEIGHT / 2.5)

.love
    color red

.dna
    background-color rgba(122, 171, 244, 0.08)
    border-radius 5px
    padding 10px
    font-family monospace
    font-size 12pt
    border 1px solid #9db0ce
    margin-bottom 15px
    th
        width 50px
    .hl
        color red
        font-weight bold
        text-decoration underline

.help
    text-align justify
    table
        width 100%
        margin-bottom 15px
        &.alignment
            font-size 12pt
            font-family monospace
            border 1px solid black
            td
                padding 5px
                border 1px solid black
                &.seq
                    width 50%

.back-to-top
    cursor pointer
    position fixed
    bottom 20px
    right 20px
    display none
